<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Posts Page</title>
</head>
<body>
    <a href="/">Main</a>
    <a href="create-post">create post</a>

    

    
    <h1>Posts</h1>
    <div id="postsContainer">
        <% if (posts.length === 0) { %>
            <p>No posts available.</p>
        <% } else { %>
            <% posts.forEach(post => { if(post.userId){ %>

                <div class="post">
                    <h2><%= post.title %></h2>
                    <p><%= post.description %></p>
                    <p><%= post.userId.email%></p>
                    <h3><strong>By:</strong><a href="/api/auth/single-user?_id=<%=post.userId._id%>"><%= post.userId.email %></a><h3>

                    <h3><a href="/single-post?_id=<%=post._id%>">View Post</a><h3>
                    <h3><a href="/update-post?_id=<%=post._id%>">Update Post</a><h3>

                     

                    <p>-----------------------------------------------------------------------</p>
 
                </div>
            <% }}) %>
        <% } %>
    </div>

</body>
</html>
